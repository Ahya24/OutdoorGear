<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebg2"
    tools:context=".HomeFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_id"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ellipse_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DASBOARD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profile_id"
        app:layout_constraintEnd_toStartOf="@+id/profile_id"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_id"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/elonmusk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/elon_musk"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/DASBOARD"
        app:layout_constraintStart_toEndOf="@+id/DASBOARD"
        app:layout_constraintTop_toTopOf="@+id/DASBOARD" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="347dp"
        android:layout_height="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_id">


        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="347dp"
            android:layout_height="270dp"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="24dp"
            android:columnCount="3"
            android:rowCount="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_id"
            app:layout_constraintVertical_bias="0.38">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="322dp"
                    android:layout_height="224dp"
                    android:src="@drawable/female_standing_hill_looking_jungle_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="322dp"
                    android:layout_height="224dp"
                    android:src="@drawable/scrol_tenda_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="322dp"
                    android:layout_height="224dp"
                    android:src="@drawable/foto_scrol_1" />

            </LinearLayout>
        </GridLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PROMOTION"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <HorizontalScrollView
        android:id="@+id/horizontalpaket"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <GridLayout
            android:id="@+id/grid_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:columnCount="3"
            android:rowCount="1"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/fullpack"
                    android:layout_width="216dp"
                    android:layout_height="132dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/fullpack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/hedon"
                    android:layout_width="216dp"
                    android:layout_height="132dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/hedon" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ceria"
                    android:layout_width="216dp"
                    android:layout_height="132dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ceria" />
            </LinearLayout>
        </GridLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebg2"
    tools:context=".HomeFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_id"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ellipse_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dasbord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBORD"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profile_id"
        app:layout_constraintEnd_toStartOf="@+id/profile_id"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_id"
        app:layout_constraintVertical_bias="0.583" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="347dp"
        android:layout_height="270dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_id">


        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="347dp"
            android:layout_height="270dp"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="24dp"
            android:columnCount="3"
            android:rowCount="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_id"
            app:layout_constraintVertical_bias="0.38">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="322dp"
                    android:layout_height="224dp"
                    android:src="@drawable/female_standing_hill_looking_jungle_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="322dp"
                    android:layout_height="224dp"
                    android:src="@drawable/scrol_tenda_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="322dp"
                    android:layout_height="224dp"
                    android:src="@drawable/foto_scrol_1" />

            </LinearLayout>
        </GridLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="PROMOTION"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />



        <GridLayout
            android:id="@+id/grid_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="430dp"
            android:layout_marginBottom="95dp"
            android:columnCount="3"
            android:rowCount="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="216dp"
                    android:layout_height="132dp"
                    android:src="@drawable/pak_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="216dp"
                    android:layout_height="132dp"
                    android:src="@drawable/pak_2" />

            </LinearLayout>

        </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>